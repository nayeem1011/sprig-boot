pipeline {
    agent any
    environment {
        
        IMAGE_NAME = "nayeemnjs/jenkins2:${BUILD_NUMBER}"
    }

    stages {
        stage('source code pull from github') {
            steps {
                git branch: 'master', url: 'https://github.com/nayeem1011/sprig-boot.git'
            }
        }


        stage('build number tag') {
            steps {
               sh 'docker build -t $IMAGE_NAME .'
               sh 'docker run -d -p 8085:8080'
            }
        }

        stage('login') {
            steps {
                sh '"dockerhub" | docker login -u nayeemnjs --password-stdin'
            }
            }
        stage('push') {
            steps {
                sh 'docker push nayeemnjs/springboot:${BUILD_NUMBER}'
            }
            }

        }

}